<div class="container">
	<div class="row">
		<div class="col-xs-12 text-center" id="top-bar">
<!--			<img src="/assets/images/burger.png" alt="burger" />-->
			<h1> thr1ve </h1>
		</div>
		<div class="col-xs-6 text-center" class="task">
			<div class="row">
			  {{#each resolution_data}}
			  	{{#unless this.devoured}}
				<div class="col-xs-9 text-center">
					<pre>{{this.id}}. {{this.resolution_name}}
					</pre>
                    
				  		<!-- {{this.Date}} -->
				</div>
				<div class="col-xs-3 text-center">
					<form class="devour-form button-size">
						<input input type="hidden" class="burger_id" type="text" value={{this.id}}><br>
						<button type="submit" class="btn btn-default">Accomplish it!</button>
					</form>
				</div>
				{{/unless}}
			  {{/each}}
			</div>
		</div>
	<div class="col-xs-6 text-center" class="task">
			  {{#each resolution_data}}
			  	{{#if this.devoured}}
			  		<input class="form-control" type="text" placeholder="{{this.id}} . {{this.resolution_name}}" readonly>
				{{/if}}
			  {{/each}}
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-xs-12 text-center enter_section">
			<form action="/burgers/create" method="POST">
				<input type="text" class="form-control" name="resolution_name" value="" id="enter_text">
				<button type="submit" class="btn btn-primary" id="text-enter-button">Add it!</button>
			</form>
			<p>Enter a resolution for the new year! Click the "Add" button.</p>
		</div>
	</div>
</div>